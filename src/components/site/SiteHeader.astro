---
import { Image } from 'astro:assets'
import Navbar from '../nav/Navbar.svelte'
import NavLink from '../nav/NavLink.astro'
import siteConfig from '@config/site'
import { mainMenu } from '@config/menus'
import logo from '../../assets/images/placeholder-social.jpg'
---

<header>
  <Navbar client:load label={mainMenu.name} site={Astro.site}>
    <Image slot="logo" src={logo} alt={siteConfig.title} />
    {
      mainMenu.items.map(({ href, name }) => (
        <NavLink slot="start" class="menu-item" {href}>
          {name}
        </NavLink>
      ))
    }
  </Navbar>
</header>
