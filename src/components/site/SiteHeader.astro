---
import { getEntry } from 'astro:content'
import Navbar from '../nav/Navbar.svelte'
import NavLink from '../nav/NavLink.astro'
import Logo from '@components/nav/Logo.astro'
const mainMenu = await getEntry('menus', 'main')
const { title, items } = mainMenu.data
---

<Navbar client:load label={title}>
  <NavLink class="navbar-item" slot="brand" href="/">
    <Logo />
  </NavLink>
  {
    items
      .filter(({ alignment }) => alignment === 'start')
      .map((item) => <NavLink slot="start" class="navbar-item" {...item} />)
  }
  {
    items
      .filter(({ alignment }) => alignment === 'end')
      .map((item) => <NavLink slot="end" class="navbar-item" {...item} />)
  }
</Navbar>
