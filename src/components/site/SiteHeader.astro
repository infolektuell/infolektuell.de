---
import Navbar from '../nav/Navbar.svelte'
import NavLink from '../nav/NavLink.astro'
import { mainMenu } from '@config/menus'
import Logo from '@components/nav/Logo.astro'
---

<Navbar client:load label={mainMenu.name}>
  <NavLink slot="brand" href="/" class="navbar-item is-size-4">
    <Logo />
  </NavLink>
  {
    mainMenu.items.map(({ href, name }) => (
      <NavLink slot="start" {href} class="navbar-item is-size-4">
        {name}
      </NavLink>
    ))
  }
</Navbar>
