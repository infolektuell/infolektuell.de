---
import siteConfig from '@config/site'
export type Props = {
  date: Date
  locale?: string
}
const { date, locale }: Props = Astro.props
const shortDate = new Intl.DateTimeFormat(locale ?? siteConfig.defaultLanguage, {
  dateStyle: 'medium',
  timeStyle: 'short',
})
---

<time datetime={date.toISOString()}>{shortDate.format(date)}</time>
