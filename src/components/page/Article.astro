---
type Props = {
  title: string
  headline?: string
  href?: string
  label?: string
  content?: boolean
}
const { title, headline, href, label, content }: Props = Astro.props
---

<article class="block" aria-label={ label ?? title }>
    <hr aria-hidden="true">
  <h3 class="title is-5">{href ? <a {href}>{title}</a> : <>{title}</>}</h3>
  {headline && <p class="subtitle is-6">{headline}</p>}
  {content ? (<div class="content"><slot /></div>) : <slot />}
  <slot name="cta" />
</article>
