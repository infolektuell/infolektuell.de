---
type Props = {
  title: string
  href?: string
  label?: string
}
const { title, href, label }: Props = Astro.props
---

<article class="block" aria-label={ label ?? title }>
    <hr>
  <h3 class="title is-5">{href ? <a {href}>{title}</a> : <>{title}</>}</h3>
  <div class="content"><slot /></div>
  <slot name="cta" />
</article>
