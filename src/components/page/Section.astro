---
type Props = {
  title?: string
}
const { title }: Props = Astro.props
---

<section class="box">
  {title && (
          <header class="title is-4">
              <h2>{title}</h2>
          </header>
  )}
  <slot />
</section>
<style>
  section {
    background: rgba(255, 255, 255, 0.5);
  }
</style>
