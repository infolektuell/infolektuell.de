---
import BaseLayout from '@layouts/BaseLayout.astro'
import Header from '@components/page/Header.astro'
import Brailler from '@components/tools/Brailler.svelte'
const title = 'Brailler'
const description = 'Eingabefeld zum schreiben von Braillezeichen'
const headline = 'Einfach Brailleschrift schreiben wie auf einer mechanischen Braille-Schreibmaschine'
const summary = 'Legen Sie zuerst die Tasten für die Braille-Punkte fest und drücken dann im Braille-Eingabefeld die Tasten in Kombination, um Braillezeichen zu erzeugen.'
const openGraph = { title: headline, description: summary }
---

<BaseLayout {title} {description} {openGraph}>
  <Header {title} {headline} {summary} />
  <Brailler client:load />
</BaseLayout>
<style is:global lang="scss">
  @import '@assets/styles/variables.scss';
  @import 'bulma/sass/form/_all.sass';
  @import 'bulma/sass/grid/_all.sass';
</style>
