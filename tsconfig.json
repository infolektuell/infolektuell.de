{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@layouts/*": ["src/layouts/*"],
      "@entities/*": ["src/entities/*"]
    },
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types", "./types", "./node_modules/@types"]
  }
}
